# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DATABASE_PATH=./db/mcp.sqlite3

# MITRE ATT&CK Configuration
MITRE_UPDATE_INTERVAL=86400000
MITRE_CACHE_DIR=./cache/mitre

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=your-gpt-deployment
AZURE_OPENAI_API_VERSION=2023-05-15
USE_AZURE_OPENAI=true

# Optional: Domain for Caddy (default: localhost)
# For production, set this to your actual domain, e.g., DOMAIN=example.com
# Caddy will then attempt to provision SSL certificates for this domain.
DOMAIN=localhost
